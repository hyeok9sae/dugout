<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cowlevel.gloria.dugout.mapper.user.UserMapper">
    <select id="selectAllUsers" resultType="User">
        SELECT  *
          FROM  user
         ORDER BY id
    </select>

    <select id="selectUserById" resultType="User">
        SELECT *
          FROM user
         WHERE id   = #{id}
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO user(
            email,
            password,
            nickname,
            photo,
            state_comment,
            is_admin
        ) VALUES (
            #{email},
            #{password},
            #{nickname},
            #{photo},
            #{stateComment},
            0
        )
    </insert>

    <update id="updateUser" parameterType="User">
        UPDATE  user
           SET  password     = #{password},
                nickname     = #{nickname},
                photo        = #{photo},
                state_comment = #{stateComment}
         WHERE  id           = #{id}
    </update>

    <delete id="deleteUserById" parameterType="Long">
        DELETE
          FROM user
         WHERE id = #{id}
    </delete>

    <select id="selectUserByEmail" resultType="User">
        SELECT *
          FROM user
         WHERE email = #{email}
    </select>
</mapper>