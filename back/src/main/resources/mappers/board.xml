<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cowlevel.gloria.dugout.mapper.board.BoardMapper">
    <select id="selectAllBoards" resultType="Board">
        SELECT  *
        FROM  board
        ORDER BY id
    </select>

    <select id="selectBoardById" resultType="Board">
        SELECT *
        FROM board
        WHERE id   = #{id}
    </select>

    <insert id="insertBoard" parameterType="Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board(
            name
        ) VALUES (
            #{name}
                 )
    </insert>

    <update id="updateBoard" parameterType="Board">
        UPDATE  board
           SET  name         = #{name}
         WHERE  id           = #{id}
    </update>

    <delete id="deleteBoardById" parameterType="Long">
        DELETE
        FROM board
        WHERE id = #{id}
    </delete>
</mapper>